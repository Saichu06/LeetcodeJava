class Solution {
    public int longestOnes(int[] nums, int k) {
        int maxlen=0;
        int left=0;
        int right=0;
        int zero=0;
        while(right<nums.length){
            if(nums[right]==0){
                zero++;
            }

            while(zero>k){
                if(nums[left]==0){
                    zero--;
                }

                left++;
            }
            right++;
            int len=right-left;
            maxlen=Math.max(maxlen,len);
        }

        return maxlen;
    }
}
