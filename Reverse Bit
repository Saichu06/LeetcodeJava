class Solution {
    public int reverseBits(int n) {
        int result=0;
        for(int i=0;i<32;i++){
            int lastbit=n&1;   // takes right most bit of n
            result=result <<1 |lastbit;  //Shift all bits in result one position to the left
            n=n>>>1; // This moves to the next bit in n.
        }   
        return result;
    }
}
